<%- include("header") -%>
    <div class="box" id="heading">
        <h1><%= day %></h1>
        <div class="title">
            <div class="links">
            <a href="/">DAILY <span>todos</span></a>
            <a href="/work">WORK <span>todos</span>  </a>
        </div>
            <h5><%= time %></h5>
        </div>
       

    </div>

    <div class="box">
        
        <%  newListItem.map(item =>{ %>
            <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox">
                 <p><%= item.name %></p>
                 <!-- <button  display="none" name="listButton" value=<%= listTitle %>></button> -->
                 <button  type="submit" class="trash" onClick="this.form.submit()" value= <%= item.id %> name=<%= listTitle %>><i class="fas fa-trash-alt"></i></button>
            </div>
            </form>
       <% }) %>
    
       <form class="item" action="/" method="post">
        <input type="text" name="itemText" placeholder="new todo" autocomplete="off" >
        <button type="submit" name="list" value= <%= listTitle %>>+</button>
        </form>

    </div>

<%- include("footer") -%>